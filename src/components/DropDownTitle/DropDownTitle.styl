.dropdown
  position relative
  padding: 5px 10px;
  padding-right 20px
  width 150px
  background-color green
  color #fff
  font-weight 900
  cursor pointer

.dropdownTriangle
  position absolute
  right 10px
  top 10px
  display inline-block
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 10px 5px 0 5px;
  border-color: #ffffff transparent transparent transparent;
  transition transform .1s ease
  transform rotate(-90deg)
.rotated
  transform rotate(0deg)

